@model ExternalLoginConfirmationViewModel
@inject LocService SharedLocalizer
@{
    ViewData["Title"] = "Register";
}

<!-- Top content -->
<div class="account">
    <!-- Top menu -->
    <nav class="navbar navbar-inverse navbar-no-bg" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Content("~/")">
                    <img src="~/assets/img/logo.png" class="img-responsive" />
                </a>
            </div>
        </div>
    </nav>
    <div class="inner-bg" style="padding-top:0;">
        <div class="container">
            <div class="row">
                <div class="form-center">
                    <div class="col-sm-12 form-box wow">
                        <div class="form-top">
                            <h3>@SharedLocalizer.GetLocalizedHtmlString("signup") @SharedLocalizer.GetLocalizedHtmlString("external")</h3>
                            <p>
                                @SharedLocalizer.GetLocalizedHtmlString("successfullyAuthenticated") <strong>@Model.Provider</strong>.
                                @SharedLocalizer.GetLocalizedHtmlString("pleaseEnter")
                            </p>
                        </div>
                        <div class="form-bottom">
                            <form method="post" asp-controller="Account" asp-action="ExternalLoginConfirmation">
                                <input asp-for="Provider" type="hidden" class="form-control" />
                                <input asp-for="ProviderUserId" type="hidden" class="form-control" />
                                <div class="form-group">
                                    <label class="form-control-label">@SharedLocalizer.GetLocalizedHtmlString("FirstName") *</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="@SharedLocalizer.GetLocalizedHtmlString("FirstName")" />
                                    <div class="has-danger">
                                        <div><span asp-validation-for="FirstName" class="text-danger"></span></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">@SharedLocalizer.GetLocalizedHtmlString("LastName")</label>
                                    <input asp-for="LastName" class="form-control" placeholder="@SharedLocalizer.GetLocalizedHtmlString("LastName")" />
                                    <div class="has-danger">
                                        <div><span asp-validation-for="LastName" class="text-danger"></span></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">@SharedLocalizer.GetLocalizedHtmlString("Phone")</label>
                                    <input asp-for="Phone" class="form-control" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Phone")" />
                                    <div class="has-danger">
                                        <div><span asp-validation-for="Phone" class="text-danger"></span></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">@SharedLocalizer.GetLocalizedHtmlString("UserName")</label>
                                    <input readonly asp-for="Email" class="form-control" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Email")" />
                                    <div class="has-danger">
                                        <div><span asp-validation-for="Email" class="text-danger"></span></div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-info background-color-twin">Đăng ký</button>
                            </form>
                            <div class="sign-in text-left">
                                @SharedLocalizer.GetLocalizedHtmlString("accountAlready") <a asp-controller="account" asp-action="login" class="support-link blue--text">@SharedLocalizer.GetLocalizedHtmlString("signin")?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
