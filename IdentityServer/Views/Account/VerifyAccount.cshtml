@model VerifyAccountViewModel
@inject LocService SharedLocalizer
@{
    ViewData["Title"] = "Verify account";
}

<!-- Top content -->
<div class="account" >
    <!-- Top menu -->
    <nav class="navbar navbar-inverse navbar-no-bg" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Content("~/")">
                    <img src="~/assets/img/logo.png" class="img-responsive" />
                </a>
            </div>
        </div>
    </nav>
    <div class="inner-bg" style="padding-top:0;">
        <div class="container">
            <div class="row">
                <div class="form-center" style="width:700px">
                    <div class="col-sm-12 form-box wow fadeInUp">
                        <div class="form-top">
                            <h3>Verify your account</h3>
                            <p>@SharedLocalizer.GetLocalizedHtmlString("howShould")?</p>
                        </div>
                        <div class="form-bottom">
                            <form method="post" asp-action="VerifyAccount" asp-route-returnurl="@ViewData["ReturnUrl"]">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6"><p>@SharedLocalizer.GetLocalizedHtmlString("Phone")</p><p class="phone">@Model.Phone</p></div>
                                        <div class="col-md-6"><button class="btn btn-primary pointer" name="VerifyType" value="SMS">@SharedLocalizer.GetLocalizedHtmlString("verify")</button></div>
                                    </div>
                                </div>
                            </form>
                            <form method="post" asp-action="VerifyAccount" asp-route-returnurl="@ViewData["ReturnUrl"]">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p>@SharedLocalizer.GetLocalizedHtmlString("email")</p>
                                            <p class="phone" style="word-break: break-all; line-height: normal;" id="email-text"> @Model.Email</p>
                                        </div>
                                        <div class="col-md-6">
                                            <button class="btn btn-primary pointer" type="submit" name="VerifyType" id="button-email-text" value="Email">
                                                @SharedLocalizer.GetLocalizedHtmlString("verify")
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
