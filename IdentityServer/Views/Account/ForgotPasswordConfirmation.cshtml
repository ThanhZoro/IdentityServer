@{
    ViewData["Title"] = "Forgot password confirmation";
}
@inject LocService SharedLocalizer
<!-- Top content -->
<div  id="app" class="account">
    <!-- Top menu -->
    <nav class="navbar navbar-inverse navbar-no-bg" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Content("~/")">
                    <img src="~/assets/img/logo.png" class="img-responsive" />
                </a>
            </div>
        </div>
    </nav>
    <div class="inner-bg" style="padding-top:0;">
        <div class="container">
            <div class="row">
                <div class="form-center">
                    <div class="col-sm-12 form-box wow fadeInUp">
                        <div class="form-top">
                            <h3>@SharedLocalizer.GetLocalizedHtmlString("forgotPassword")</h3>
                            <p>@SharedLocalizer.GetLocalizedHtmlString("pleaseCheck")</p>
                        </div>
                        <div class="form-bottom">
                            <form method="get" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" style="margin-top:20px;">
                                <button type="submit" class="btn button-mini btn-primary pointer">@SharedLocalizer.GetLocalizedHtmlString("loginAgain")</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    new Vue({
        el: '#app-login',
        data: {

        },
        methods: {
        }
    })
</script>

